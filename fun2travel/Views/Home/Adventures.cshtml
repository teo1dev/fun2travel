@model AdventuresVM[]
<div class="bs-component">
    <div class="jumbotron">
        <div class="hotels"></div>
        <h1 class="display-3">Adventures and Activities</h1>
        <p class="lead">Many choices of activities and adventures ensuring that anyone can find something they are interested in</p>
        <hr class="my-4">
        <br />
        <br />
        <br />
        <div class="d-flex justify-content-center">
            <div class="row">
                @for (int i = 0; i < 3; i++)
                {
                    <div class="card text-white bg-info mb-3" style="max-width: 20rem;">
                        <a class="navbar-link" asp-controller="Details" asp-action="AdventureDetails" asp-route-id="@Model[i].Id">

                            <div class="card-header"><h4 class="card-title">@Model[i].ActivityName</h4></div>
                            <div class="card-body">
                                <img src="@Model[i].ActivityPic1" class="card-image" />
                            </div>
                        </a>
                    </div>
                }
            </div>
        </div>
        <div class="d-flex justify-content-center">
            <div class="row">
                @for (int i = 3; i < 6; i++)
                {
                    <div class="card text-white bg-info mb-3" style="max-width: 20rem;">
                        <a class="navbar-link" asp-controller="Details" asp-action="AdventureDetails" asp-route-id="@Model[i].Id">

                            <div class="card-header"><h4 class="card-title">@Model[i].ActivityName</h4></div>
                            <div class="card-body">
                                <img src="@Model[i].ActivityPic1" class="card-image" />
                            </div>
                        </a>
                    </div>
                }
            </div>
        </div>
        <div class="d-flex justify-content-center">
            <div class="row">
                @for (int i = 6; i < 9; i++)
                {
                    <div class="card text-white bg-info mb-3" style="max-width: 20rem;">
                        <a class="navbar-link" asp-controller="Details" asp-action="AdventureDetails" asp-route-id="@Model[i].Id">

                            <div class="card-header"><h4 class="card-title">@Model[i].ActivityName</h4></div>
                            <div class="card-body">
                                <img src="@Model[i].ActivityPic1" class="card-image" />
                            </div>
                        </a>
                    </div>
                }
            </div>
        </div>
        <div class="d-flex justify-content-center">
            <div class="row">
                @for (int i = 9; i < 12; i++)
                {
                    <div class="card text-white bg-info mb-3" style="max-width: 20rem;">
                        <a class="navbar-link" asp-controller="Details" asp-action="AdventureDetails" asp-route-id="@Model[i].Id ">

                            <div class="card-header"><h4 class="card-title">@Model[i].ActivityName</h4></div>
                            <div class="card-body">
                                <img src="@Model[i].ActivityPic1" class="card-image" />
                            </div>
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
