@model HotelsVM[]
<div class="bs-component">
    <div class="jumbotron">
        <div class="hotels"></div>
        <h1 class="display-3">Our Activty Hotels</h1>
        <p class="lead">These are our hotels wich offer many varied types of activities.</p>
        <hr class="my-4">
        <br />
        <br />
        <br />
        <div class="d-flex justify-content-center">
            <div class="row">
                @for (int i = 0; i < 3; i++)
                {
                    <div class="card text-white bg-info mb-3" style="max-width: 20rem;">
                        <a class="navbar-link" asp-controller="Details" asp-action="HotelDetail" asp-route-id="@Model[i].Id">

                            <div class="card-header"><h4 class="card-title">@Model[i].HotelName</h4></div>
                            <div class="card-body">
                                <img src="@Model[i].HotelPic1" class="card-image" />
                            </div>
                        </a>
                    </div>
                }
            </div>

        </div>
        <div class="d-flex justify-content-center">
            <div class="row">
                @for (int i = 3; i < 6; i++)
                {
                    <div class="card text-white bg-info mb-3" style="max-width: 20rem;">
                        <a class="navbar-link" asp-controller="Details" asp-action="HotelDetail" asp-route-id="@Model[i].Id">

                            <div class="card-header"><h4 class="card-title">@Model[i].HotelName</h4></div>
                            <div class="card-body">
                                <img src="@Model[i].HotelPic1" class="card-image" />
                            </div>
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
