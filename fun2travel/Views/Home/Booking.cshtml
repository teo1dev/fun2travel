@model HotelDetailVM
<div class="row">
    <div class="col-lg-12">
        <div class="bs-component">
            <div class="jumbotron">
                <form>
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="bs-component">
                                <div class="form-group">
                                    <label class="col-form-label" for="inputDefault">Hotel Name</label>
                                    <input type="text" class="form-control" placeholder="@Model.HotelName" id="inputHotel">

                                </div>

                                <div class="col-lg-4">
                                    <div class="form-group">
                                        <label class="control-label">Rum</label>
                                        <select id="NumberofRoom" class="form-control">
                                            <option selected>0</option>
                                            <option value="1">1</option>
                                            <option value="2">2</option>
                                            <option value="3">3</option>
                                            <option value="4">4</option>
                                            <option value="5">5</option>
                                            <option value="6">6</option>
                                            <option value="7">7</option>
                                            <option value="8">8</option>
                                            <option value="9">9</option>
                                            <option value="10">10</option>
                                        </select>

                                        <label class="control-label">Pers</label>
                                        <select id="NumberofPeopleRoom" class="form-control">
                                            <option selected>0</option>
                                            <option value="1">1</option>
                                            <option value="2">2</option>
                                            <option value="3">3</option>
                                            <option value="4">4</option>
                                            <option value="5">5</option>
                                            <option value="6">6</option>
                                            <option value="7">7</option>
                                            <option value="8">8</option>
                                            <option value="9">9</option>
                                            <option value="10">10</option>
                                        </select>
                                    </div>
                                </div>
                            </div>

                            <legend>Pick Date</legend>
                            <div class="bs-component">

                                <div class="row">

                                    <div class="col">
                                        <label for="dtp_input2" class="col-md-2 control-label">Starting</label>
                                        <div class="input-group date form_date col-md-8" data-date="" data-date-format="dd MM yyyy" data-link-field="dtp_input2" data-link-format="yyyy-mm-dd">
                                            <input class="form-control" size="16" type="text" value="" readonly>
                                            <span class="input-group-addon"><span class="glyphicon glyphicon-remove"></span></span>
                                            <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
                                        </div>
                                        <input type="hidden" id="dtp_input1" value="" /><br />
                                    </div>

                                    <div class="col">

                                        <label for="dtp_input2" class="col-md-2 control-label">Ending</label>
                                        <div class="input-group date form_date col-md-8" data-date="" data-date-format="dd MM yyyy" data-link-field="dtp_input2" data-link-format="yyyy-mm-dd">
                                            <input class="form-control" size="16" type="text" value="" readonly>
                                            <span class="input-group-addon"><span class="glyphicon glyphicon-remove"></span></span>
                                            <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
                                        </div>
                                        <input type="hidden" id="dtp_input2" value="" /><br />
                                    </div>


                                </div>

                            </div>

                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label class="col-form-label" for="inputDefault">Activity</label>
                                <select id="ActivityList" class="form-control">
                                    @for (int i = 0; i < Model.ActivityList.Count; i++)
                                    {
                                        <option value="@Model.ActivityList[i].ActivityName">@Model.ActivityList[i].ActivityName</option>
                                    }

                                </select>

                            </div>
                            <div class="row">
                                <div class="col-lg-4">
                                    <select id="NumberofPeopleActivity" class="form-control">
                                        <option selected>0</option>
                                        <option value="1">1</option>
                                        <option value="2">2</option>
                                        <option value="3">3</option>
                                        <option value="4">4</option>
                                        <option value="5">5</option>
                                        <option value="6">6</option>
                                        <option value="7">7</option>
                                        <option value="8">8</option>
                                        <option value="9">9</option>
                                        <option value="10">10</option>
                                    </select>
                                </div>
                                <div class="col-lg-4">

                                    <label class="control-label"># of ppl</label>
                                </div>
                            </div>
                            <br />
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <div class="custom-control custom-checkbox">
                                            <input type="checkbox" class="custom-control-input" id="customCheck1">
                                            <label class="custom-control-label" for="customCheck1">Equpment</label>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="custom-control custom-checkbox">
                                            <input type="checkbox" class="custom-control-input" id="customCheck2">
                                            <label class="custom-control-label" for="customCheck2">Food</label>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="custom-control custom-checkbox">
                                            <input type="checkbox" class="custom-control-input" id="customCheck3">
                                            <label class="custom-control-label" for="customCheck3">Transport service</label>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <input type="text" readonly="" class="form-control-plaintext" id="staticPriceEquipment" value="Price Placeholder">
                                    <input type="text" readonly="" class="form-control-plaintext" id="staticPriceFood" value="Price Placeholder">
                                    <input type="text" readonly="" class="form-control-plaintext" id="staticPriceTransport" value="Price Placeholder">
                                </div>
                            </div>
                                    <br />
                                    <br />
                                    <br />
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="form-group">
                                        <label class="col-form-label" for="inputFullName">Full Name</label>
                                        <input type="text" class="form-control" placeholder="Full Name" id="inputFullName">
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputEmail1">Email address</label>
                                        <input type="email" class="form-control" id="InputEmail" aria-describedby="emailHelp" placeholder="Enter email">
                                        <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-form-label" for="inputDefault">Phone number</label>
                                        <input type="text" class="form-control" placeholder="+" id="inputPhone">
                                    </div>
                                    <div class="col-md-4">
                                        <button type="button" class="btn btn-outline-primary btn-lg btn-block">Book</button>
                                    </div>

                                </div>



                                </div>
                            </div>


                    </div>

                </form>
            </div>
        </div>
    </div>
</div>


