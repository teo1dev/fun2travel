@model LoginVM
<div class="bs-component">
    <div class="jumbotron">
        <div class="img"></div>
        <h1 class="display-3"></h1>
        <hr class="my-4">
        <br />
        <br />
        <br />
        <br />     <div class="d-flex justify-content-center">
            <div class="col-sm-6">
                <div class="container">
                    <h1>Login</h1>
                    <form asp-controller="Account" asp-action="Login" asp-route-returnUrl="@Model.ReturnUrl">
                        <label asp-for="Username"></label>
                        <input asp-for="Username" placeholder="Username/Email" />
                        <span asp-validation-for="Username"></span>
                        <br />
                        <label asp-for="Password">  </label>
                        <input asp-for="Password" placeholder="Password"/>
                        <span asp-validation-for="Password"></span>
                        <br />
                        <div class="checkbox">
                            <label>
                                <input type="checkbox" value="remember-me"> Remember me
                            </label>
                        </div>
                        <input type="submit" class="btn btn-lg btn-primary btn-block" value="Login" />
                    </form>

                    <label>Not a member? <a asp-controller="Account" asp-action="RegisterNewUser">Register</a></label>

                </div>
            </div>
        </div>
    </div>
</div>