@model HotelsVM[]
<br />
<br />
<br />
<br />
<br />
<div class="override">

    <p class="lead">HOTELS:</p>
    <a asp-controller="Members" asp-action="AddHotel"class="btn btn-outline-primary btn-lg btn-block">Add Hotel</a>
    <table class="table table-dark">
        <thead>
            <tr>
                <td>HotelName</td>
                <td>HotelLocation</td>
                <td>HotelAdress</td>
                <td>TotalNrOfBeds</td>
                <td>BedPricePerNight</td>
                <td>Remove Hotel</td>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr class="table-dark">
                    <td> @item.HotelName </td>
                    <td> @item.HotelLocation </td>
                    <td> @item.HotelAdress </td>
                    <td> @item.TotalNrOfBeds </td>
                    <td> @item.BedPricePerNight </td>
                    <td>
                        <a asp-controller="Members" asp-action="ManageHotels" asp-route-id="@item.Id" onclick="ConfirmDeleteHotel(@item.Id)" class="btn btn-outline-primary btn-lg btn-block">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>