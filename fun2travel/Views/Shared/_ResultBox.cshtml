                    <th scope="col">Activity</th>
                    <th scope="col" class="text-right"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="table-sm table-active">
                        <td>@item.HotelName</td>
                        <td class="text-right">
                            <div class="">
                                <a class="btn btn-primary" asp-action="Booking" role="button" style="margin-right:50px;width:50%">Book</a>

                            </div>
                        </td>
                    </tr>
                }

